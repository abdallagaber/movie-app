<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Movie</title>
    <link rel="stylesheet" href="../css/form.css" type="text/css">
</head>
<body>
<div class="container">
    <a class="back" href="/"> << Back</a>
    <h1>Edit Movie</h1>
    <form action="/edit/<%= movie._id %>?_method=PUT" method="POST">
        <div class="title">
            <label class="block" for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%= movie.title %>" required>
        </div>
        <div class="genre">
            <label class="block" for="genre">Genre:</label>
            <% genreOptions.forEach((option) => { %>
                <div class="option">
                    <input type="checkbox" name="genre" id="<%= option %>" value="<%= option %>"
                            <%= movie.genre.includes(option) ? 'checked' : '' %>>
                    <label for="<%= option %>"><%= option %></label>
                </div>
            <% }); %>
        </div>
        <div class="besides">
            <div class="year">
                <label class="block" for="year">Year:</label>
                <input type="number" id="year" name="year" min="1878" max="<%= new Date().getFullYear(); %>" value="<%= movie.year %>" required>
            </div>
            <div class="rating">
                <label class="block" for="rating">Rating:</label>
                <input type="number" id="rating" name="rating" step="0.1" min="0" max="10" value="<%= movie.rating %>"
                       required>
            </div>
        </div>
        <input type="submit" value="Update Movie">
    </form>
</div>
</body>
</html>
